    "version": "2.0.0",
    "tasks": [
        {
            "label": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "mvn -B build",
            "group": "build"
        },
        {
            "label": "clean build",
            "type": "shell",
            "command": "mvn -B clean build",
            "group": "build"
        },
        {
            "label": "install",
            "type": "shell",
            "command": "mvn -B install",
            "group": "build"
        },
        {
            "label": "clean install",
            "type": "shell",
            "command": "mvn -B clean install",
            "group": "build"
        },
        {
            "label": "exec:java",
            "type": "shell",
            "command": "mvn -B exec:java",
            "group": "build"
        }
    ]
}